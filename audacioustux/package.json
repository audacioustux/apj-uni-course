{
  "scripts": {
    "docker-compose": "docker-compose up -d",
    "browser-sync": "browser-sync start --proxy \"localhost:8888\" --files \"target/$(basename $(pwd))\"",
    "tailwind": "npx tailwindcss -i src/main/webapp/css/index.css -o src/main/resources/css/index.css --postcss postcss.config.js",
    "watch-tailwind": "npm run tailwind -- -w",
    "maven": "mvn package",
    "watch-maven": "nodemon -w src/main/webapp -e jsp,java,html -w pom.xml -w src/main/resources/css/index.css --exec \"npm run maven\"",
    "start": "ulimit -c unlimited && PROJECT_NAME=$(basename $(pwd)) npm run docker-compose && concurrently -k 'npm:watch-*' 'npm:browser-sync' -n \"maven,browser-sync\""
  },
  "workspaces": [],
  "devDependencies": {
    "autoprefixer": "^10.3.7",
    "browser-sync": "^2.27.5",
    "concurrently": "^6.3.0",
    "eslint": "^8.1.0",
    "nodemon": "^2.0.13",
    "postcss": "^8.3.11",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^2.2.17",
    "tailwindcss-children": "^2.1.0",
    "tailwindcss-pseudo-elements": "^2.0.0"
  },
  "dependencies": {}
}
