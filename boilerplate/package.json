{
  "scripts": {
    "docker-compose": "COMPOSE_PROJECT_NAME=$(basename $(pwd)) docker-compose up -d",
    "browser-sync": "browser-sync start --proxy \"localhost:8888\" --files \"target/$(basename $(pwd))\"",
    "watch-maven": "nodemon -w src -e jsp,java --exec \"mvn war:exploded\"",
    "start": "npm run docker-compose && concurrently 'npm run watch-maven' 'npm run browser-sync' -n \"maven, browser-sync\" "
  },
  "workspaces": [],
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "concurrently": "^6.3.0",
    "nodemon": "^2.0.13"
  }
}
